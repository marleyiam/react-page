{
  "compilerOptions": {
    "incremental": true,
    "downlevelIteration": true,
    "rootDirs": ["src"],
    "outDir": "lib",
    "strict": true,
    "moduleResolution": "node",
    "target": "es2022",
    "module": "esnext",
    "jsx": "react",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noUnusedLocals": false,
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "lib": ["es2022", "dom"],
    "types": ["node", "jest"]
  }
}
